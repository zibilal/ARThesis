<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zibilal.arthesis.app" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.zibilal.arthesis.app.TestActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zibilal.arthesis.app.CameraPreviewActivity"
            android:label="@string/title_activity_camera_preview"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.zibilal.arthesis.app.CompassActivity"
            android:label="@string/title_activity_compass" >
        </activity>
        <activity
            android:name="com.zibilal.arthesis.app.LocationAwareActivity"
            android:label="@string/title_activity_location_aware" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.zibilal.arthesis.app.NorthFinderActivity"
            android:label="@string/title_activity_north_finder"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.zibilal.arthesis.app.CameraSensorDataViewActivity"
            android:label="@string/title_activity_camera_sensor_data_view"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.zibilal.arthesis.app.DataTestActivity"
            android:label="@string/title_activity_data_test" >
        </activity>
        <activity
            android:name="com.zibilal.arthesis.app.CubeIn2DCanvasActivity"
            android:label="@string/title_activity_cube_in2_dcanvas" >
        </activity>
        <activity
            android:name="com.zibilal.arthesis.app.OvalViewTestActivity"
            android:label="@string/title_activity_oval_view_test" >
        </activity>
        <activity
            android:name="com.zibilal.arthesis.app.PathViewTestActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_path_view_test" >
        </activity>
        <activity
            android:name="com.zibilal.arthesis.app.TriangleViewActivity"
            android:label="@string/title_activity_triangle_view" >
        </activity>
        <activity
            android:name="com.zibilal.arthesis.app.CoordinateViewActivity"
            android:label="@string/title_activity_coordinate_view" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

</manifest>
